// 開発用にESModuleで出力
{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": false,
    "skipLibCheck": false,
    "outDir": "./dist/dev",
    "moduleResolution": "NodeNext"
  },
  "include": ["src/**/*", "__tests__/**/*", "examples/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
